                            <div class="thumb">

                                <img src="@firstcategory.ImageURL" alt="Image" style="height : 500px; width:376px;object-fit:cover ; object-position:center center">
                                <div class="elm-btn">
                                    <a href="@Url.Action("Index","Shop",new {categoryID=firstcategory.ID })" class="themesflat-button bg-white width-150">@firstcategory.Name</a>
