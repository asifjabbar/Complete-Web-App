@model Banglabazaar.Web.HomeViewModel.OrderDetailViewModel




}
@if (Model != null && Model.Order != null)
{


    var i = 1;
    <section class="flat-row main-shop shop-slidebar">
        <div class="container">
            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Your cart</span>

                    </h4>
                    <ul class="list-group mb-3">
                        @foreach (var orderitem in Model.Order.OrderItems)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">@i - @orderitem.Product.Name - Qty: @orderitem.Qauntity</h6>
                                    <small class="text-muted">
                                        @{
                                            if (@orderitem.Product.Description == null)
                                            {
                                                @orderitem.Product.Description ;
                                            }
                                            else
                                      if (@orderitem.Product.Description.Length > 100)
                                            {
                                                @orderitem.Product.Description.Substring(0, 99);
                                            }
                                            else
                                            {
                                                @orderitem.Product.Description;
                                            }



                                        }
                                    </small>
                                </div>
                                <span class="text-muted">Unit Price: @orderitem.Price - Total Price: @(orderitem.Qauntity * orderitem.Price)</span>
                            </li>
                                                i++;
                                            }


                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total (PKR)</span>
                            <strong>PKR @Model.Order.TotalAmount</strong>
                        </li>
                    </ul>

                </div>
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Shipping Information</h4>
                    <form class="needs-validation" novalidate="">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="firstName">User Name</label>
                                <input type="text" class="form-control" id="username" placeholder="" value="@Model.Order.UserName" required="" disabled>

                            </div>

                        </div>



                        <div class="mb-3">
                            <label for="email">Email <span class="text-muted"></span></label>
                            <input type="email" class="form-control" id="email" placeholder="" value="@Model.OrderBy.Email" disabled>

                        </div>

                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="" required="" value="@Model.Order.Address" disabled>

                        </div>

                        <div class="mb-3">
                            <label for="address">Contact</label>
                            <input type="text" class="form-control" id="address" placeholder="" required="" value="@Model.Order.Contact" disabled>

                        </div>
                        <div class="mb-3">
                            <label for="address">Status</label>
                          
                            <select name="status" id="changestatus">
                                @foreach (var statues in Model.availablestatus)
                                {
                                    var isselected = statues == Model.Order.Status;
                                    <option @(isselected ? "selected" : string.Empty) disabled>@statues</option>
                                }
                            </select>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </section>

     }
     else
     {
         <b>No Orders</b>
     }


