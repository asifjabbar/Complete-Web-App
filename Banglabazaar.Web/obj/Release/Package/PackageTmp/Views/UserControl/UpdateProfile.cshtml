@model Banglabazaar.Web.HomeViewModel.UserControlModel



<div class="row">
    <div class="col-md-12">
        <div class="title-section">
            <h2 class="title">
                UPDATE PROFILE
            </h2>
        </div><!-- /.title-section -->
    </div><!-- /.col-md-12 -->
</div>


<div class="container">

    @using (Html.BeginForm("UpdateProfile", "UserControl", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Update Information.</h4>
        @TempData["Message"];
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
          
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserID, new { @class = "form-control", @Value = Model.UserID, hidden = true})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Value = Model.Name})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @Value = Model.Address })
            </div>
        </div>
        <div class="form-group" hidden="hidden">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Value = Model.Email, @disabled = "disabled" })
            </div>
        </div>
       
        <div class="form-group">
           <div>
               <a href="@Url.Action("ChangePassword","Manage")">Change Password</a>
           </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>
    }

</div>

